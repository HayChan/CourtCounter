<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.courtcounter.MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.user.courtcounter.MainActivity">

        <TextView
        android:text="Team A"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/team_a_score"
        android:text="0"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/addThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addThreeToTeamA"
        android:textSize="30dp"
        android:text=" +3 POINTS " />

    <Button
        android:id="@+id/addTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addTwoToTeamA"
        android:textSize="30dp"
        android:text=" +2 POINTS "/>

    <Button
        android:id="@+id/addOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addOneToTeamA"
        android:textSize="30dp"
        android:text=" FREE THROW "/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.user.courtcounter.MainActivity">

    <TextView
        android:text="Team B"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/team_b_score"
        android:text="0"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/addThreeToB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addThreeToTeamB"
        android:textSize="30dp"
        android:text=" +3 POINTS " />

    <Button
        android:id="@+id/addTwoToB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addTwoToTeamB"
        android:textSize="30dp"
        android:text=" +2 POINTS "/>

    <Button
        android:id="@+id/addOneToB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addOneToTeamB"
        android:textSize="30dp"
        android:text=" FREE THROW "/>

    </LinearLayout>
</LinearLayout>



